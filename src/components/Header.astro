---
import { Image } from "astro:assets";
import home from "../assets/home-outline.svg";
import book from "../assets/book-outline.svg";
const {currentPath} = Astro.props;
---

<header 
   class="fixed bottom-0 w-full h-max flex flex-row justify-center items-center"
>
   <nav id="navbar"
      class="border border-slate-700 w-full mx-4 my-4 bg-slate-800 rounded-xl p-4 flex flex-row justify-center items-center gap-6"
   >
      <a href="/" class={`flex flex-col justify-center items-center w-20 ${currentPath === "" ? "text-orange-400" : "hover:text-orange-400"}`}>
         <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
            width="24"
            class="fill-current ionicon"
            ><path
               d="M80,212V448a16,16,0,0,0,16,16h96V328a24,24,0,0,1,24-24h80a24,24,0,0,1,24,24V464h96a16,16,0,0,0,16-16V212"
               style="fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px"
            ></path><path
               d="M480,256,266.89,52c-5-5.28-16.69-5.34-21.78,0L32,256"
               style="fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px"
            ></path><polyline
               points="400 179 400 64 352 64 352 133"
               style="fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px"
            ></polyline></svg
         >
         <p>Home</p>
      </a>
      <a href="/menu" class={`flex flex-col justify-center items-center w-20 ${currentPath === "menu" ? "text-orange-400" : "hover:text-orange-400"} `}>
         <svg
            xmlns="http://www.w3.org/2000/svg"
            class="ionicon"
            width="24"
            viewBox="0 0 512 512"
            ><path
               d="M256 160c16-63.16 76.43-95.41 208-96a15.94 15.94 0 0116 16v288a16 16 0 01-16 16c-128 0-177.45 25.81-208 64-30.37-38-80-64-208-64-9.88 0-16-8.05-16-17.93V80a15.94 15.94 0 0116-16c131.57.59 192 32.84 208 96zM256 160v288"
               fill="none"
               stroke="currentColor"
               stroke-linecap="round"
               stroke-linejoin="round"
               stroke-width="32"></path></svg
         >
         <p>Menu</p>
      </a>
      <a href="/contacts" class={`flex flex-col justify-center items-center w-20 ${currentPath === "contacts" ? "text-orange-400" : "hover:text-orange-400"} `}>
         <svg
            width="24"
            xmlns="http://www.w3.org/2000/svg"
            class="ionicon"
            viewBox="0 0 512 512"
            ><circle
               cx="128"
               cy="256"
               r="48"
               fill="none"
               stroke="currentColor"
               stroke-linecap="round"
               stroke-linejoin="round"
               stroke-width="32"></circle><circle
               cx="384"
               cy="112"
               r="48"
               fill="none"
               stroke="currentColor"
               stroke-linecap="round"
               stroke-linejoin="round"
               stroke-width="32"></circle><circle
               cx="384"
               cy="400"
               r="48"
               fill="none"
               stroke="currentColor"
               stroke-linecap="round"
               stroke-linejoin="round"
               stroke-width="32"></circle><path
               fill="none"
               stroke="currentColor"
               stroke-linecap="round"
               stroke-linejoin="round"
               stroke-width="32"
               d="M169.83 279.53l172.34 96.94M342.17 135.53l-172.34 96.94"
            ></path></svg
         >
         <p>Contacts</p>
      </a>
   </nav>
</header>

<script>
   const nav = document.querySelector("#navbar");
   const navLinks = nav.querySelectorAll("a");
   const currentUrl = window.location.href;
   navLinks.forEach((link) => {
      if(link.href === currentUrl) {
         link.classList.add('text-orange-400');
      }
   });
</script>